{
  "name": "nest-starter",
  "version": "0.1.0",
  "description": "nestjs, postgres, typeorm",
  "author": "Chonny Chu",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "NODE_ENV=production nest build --webpack --webpackPath webpack.config.js",
    "build:ormconfig": "(rm ormconfig.json || :) && ts-node -r tsconfig-paths/register ./ormconfig.build.ts",
    "build:ormconfig@dev": "NODE_ENV=development yarn run ormconfig",
    "build:entity": "npx typeorm-model-generator -h localhost -d nestapp -p 5432 -u admin -x admin -e postgres -o ./db",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -f ormconfig.json",
    "migration:create": "yarn typeorm:cli migration:create -n",
    "migration:run": "yarn typeorm:cli migration:run",
    "migration:revert": "yarn typeorm:cli migration:revert",
    "seed:create": "yarn typeorm:cli migration:create -c seed -n",
    "seed:run": "yarn typeorm:cli migration:run -c seed",
    "seed:revert": "yarn typeorm:cli migration:revert -c seed",
    "start": "NODE_ENV=production node dist/main.js",
    "start:dev": "NODE_ENV=development nest build --webpack --webpackPath webpack.config.js",
    "start:debug": "NODE_ENV=development nest build --watch --webpack --webpackPath webpack.config.js",
    "start:db": "docker-compose up -d && exit 0",
    "stop:db": "docker-compose kill",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/core": "^7.4.2",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.4.2",
    "@nestjs/typeorm": "^7.1.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "express-rate-limit": "^5.1.3",
    "helmet": "^4.0.0",
    "moment": "^2.27.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.3.0",
    "qs": "^6.9.4",
    "ramda": "^0.27.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.2",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/testing": "^7.4.2",
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.9.36",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/express-rate-limit": "^5.0.0",
    "@types/helmet": "^0.0.47",
    "@types/jest": "26.0.7",
    "@types/node": "^14.0.27",
    "@types/passport-jwt": "^3.0.3",
    "@types/ramda": "^0.27.14",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "cache-loader": "^4.1.0",
    "consola": "^2.15.0",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "jest": "26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.1.4",
    "ts-jest": "26.2.0",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7",
    "webpack-node-externals": "^2.5.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
