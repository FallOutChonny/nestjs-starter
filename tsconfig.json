{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/shared/*"],
      "@user/*": ["src/user/*"],
      "@auth/*": ["src/auth/*"],
      "@role/*": ["src/role/*"]
    }
  }
}
